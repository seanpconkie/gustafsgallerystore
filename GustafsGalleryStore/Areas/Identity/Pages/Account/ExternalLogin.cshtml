@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<div class="w3-container w3-padding-64" id="main">
    <h2>@ViewData["Title"]</h2>
    <h4>Associate your @Model.LoginProvider account.</h4>
    <hr />
    <p class="text-info">
        You've successfully authenticated with <strong>@Model.LoginProvider</strong>.
        Please confirm the following details for this site below and click the Register button to finish
        logging in.
    </p>
    <div class="row">
        <div class="w3-half">
            <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="w3-input" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Forename"></label>
                    <input asp-for="Input.Forename" class="w3-input" />
                    <span asp-validation-for="Input.Forename" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Surname"></label>
                    <input asp-for="Input.Surname" class="w3-input" />
                    <span asp-validation-for="Input.Surname" class="text-danger"></span>
                </div>
                <p><button type="submit" class="w3-button w3-dark-grey w3-block w3-round">Register</button></p>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
