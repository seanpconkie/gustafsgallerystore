@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    Layout = "/Areas/Identity/Pages/Account/Manage/_Layout.cshtml";
}
<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="">
    <div class="w3-half">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="w3-input" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Input.Email" class="w3-input" />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input asp-for="Input.Email" class="w3-input" />
                    <div class="w3-row"><p class="w3-half"><button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="w3-button w3-block w3-round w3-light-grey"><i class="far fa-envelope w3-margin-right"></i>Send verification email</button></p></div>
                }
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
                <label asp-for="Input.Title"></label>
                <div class="custom-select" style="width:100%;">
                    @Html.DropDownListFor(m => m.Input.Title, Model.Input.Titles, "Select Title", new { @class = "w3-input", required = "" })
                </div>
                <span asp-validation-for="Input.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Forename"></label>
                <input asp-for="Input.Forename" class="w3-input" />
                <span asp-validation-for="Input.Forename" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Surname"></label>
                <input asp-for="Input.Surname" class="w3-input" />
                <span asp-validation-for="Input.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="w3-input" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="w3-row"><p class="w3-half"><button type="submit" class="w3-button w3-block w3-round w3-light-grey"><i class="far fa-save w3-margin-right"></i>Save</button></p></div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
