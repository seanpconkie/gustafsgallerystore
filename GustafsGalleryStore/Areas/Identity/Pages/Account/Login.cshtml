                                </button>
                            </form>
                            <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal" onclick="openModal('spin')">
                                <button class="twitter btn btn-full" type="submit" name="provider" value="Twitter" title="Log in using your Twitter account">
                                    <i class="fab fa-twitter fa-fw"></i> <span>Login with Twitter</span>
                                </button>
                            </form>
                            <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal" onclick="openModal('spin')">
                                <button class="google btn btn-full" type="submit" name="provider" value="Google" title="Log in using your Google account">
                                    <i class="fab fa-google fa-fw"></i> <span>Login with Google+</span>
                                </button>
                            </form>
                            <div class="w3-row">
                                <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal" onclick="openModal('spin')" style="display: inline">
                                    <button class="microsoft btn w3-row-padding" type="submit" name="provider" value="Microsoft" title="Log in using your Microsoft account" style="display: inline;">
                                        <i class="fab fa-microsoft"></i>
                                    </button>
                                </form>
                                <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal" onclick="openModal('spin')" style="display: inline">
                                    <button class="linkedin btn w3-row-padding" type="submit" name="provider" value="Linkedin" title="Log in using your Linkedin account" style="display: inline">
                                        <i class="fab fa-linkedin"></i>
                                    </button>
                                </form>
                                @*<form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal" onclick="openModal('spin')" style="display: inline">
                                    <button class="instagram btn w3-row-padding" type="submit" name="provider" value="Microsoft" title="Log in using your Microsoft account" style="display: inline">
                                        <i class="fab fa-instagram"></i>
                                    </button>
                                </form>*@
                                @*<form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal" onclick="openModal('spin')" style="display: inline">
                                    <button class="yahoo btn w3-row-padding" type="submit" name="provider" value="Microsoft" title="Log in using your Microsoft account" style="display: inline">
