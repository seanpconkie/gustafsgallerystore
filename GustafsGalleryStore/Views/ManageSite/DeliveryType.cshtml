@model GustafsGalleryStore.Models.ViewModels.DeliveryViewModel
@{
    ViewData["Title"] = "Update Delivery Method";
}
<div>
    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
        <div class="w3-half">
            <div class="form-group">
                <label asp-for="Company"></label>
                <select asp-for="Company" class="w3-input">
                    @foreach (var item in Model.DeliveryCompanies)
                    {
                        @if(item.Company == Model.Company)
                        {
                            <option selected>@item.Company</option>
                        }
                        else
                        {
                            <option>@item.Company</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Type"></label>
                <input asp-for="Type" class="w3-input" />
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="w3-input" type="number" min="0.01" step="0.01" />
            </div>
            <div class="form-group">
                <label asp-for="Time"></label>
                <input asp-for="Time" class="w3-input" />
            </div>
            <div class="hidden-group">
                <input hidden asp-for="Id" />
            </div>
            <button type="submit" class="w3-button w3-round w3-light-grey w3-block w3-margin-top" onclick="openModal('spin')"><i class="fas fa-save w3-margin-right"></i>Save</button>

        </div>
    </form>
</div>

<script>

    var failure = "@Model.FailureMessage";
    var message = "@Model.StatusMessage";
    var success = "@Model.SuccessMessage";

    if (failure != "")
    {
        toastr["warning"](failure, "Warning");
    }

    if (message != "")
    {
        toastr["info"](message, "Info");
    }

    if (success != "")
    {
        toastr["success"](success, "Success");
    }

</script>